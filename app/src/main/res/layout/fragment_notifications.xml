<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="138dp" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/notification_title"
        android:textSize="35sp" />

    <View
        android:id="@+id/lineBreak"
        android:layout_width="307dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/notification_title"
        app:layout_constraintTop_toBottomOf="@+id/lineSpace" />

    <Space
        android:id="@+id/lineSpace"
        android:layout_width="match_parent"
        android:layout_height="57dp" />

    <TextView
        android:id="@+id/notification_messages"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="189dp"
        android:gravity="center"
        android:text="@string/notification_message"
        android:textSize="15sp" />


</LinearLayout>